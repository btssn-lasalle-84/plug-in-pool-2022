<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lasalle.pluginpool">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_billiard"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_billiard"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlugInPool">

        <activity
            android:name=".IHMHistoriqueDesRencontres"
            android:exported="false"
            android:noHistory="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IHMFinDeRencontre"
            android:exported="false"
            android:noHistory="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IHMRencontreEnCours"
            android:exported="false"
            android:noHistory="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IHMCreerJoueur"
            android:exported="false"
            android:noHistory="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IHMNouvelleRencontre"
            android:exported="false"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IHMPlugInPool"
            android:exported="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IHMSplashScreen"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/Theme.PlugInPool.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>